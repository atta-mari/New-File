@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Sindh_University_Transport_MS.Models.Point> 

@{
    ViewBag.Title = "";
    Layout = null;
}

<div class="row">
    <div style="min-height:400px" class="col-md-12">



        @foreach (var item in Model)
        {
            <div  class="row">
                <div class="col-md-4">

                    <img src="@Url.Content(item.P_Photo)" width="400px" height="400px" class="img img-responsive img-thumbnail" />
                </div>
                <div class="col-md-8">
                    <p class="text-dark"><b>Location:&nbsp;</b> @item.Location.Name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>PointType:&nbsp;</b>@item.P_type. </p>
                    <p class="text-dark"><b>Shift:&nbsp;</b> @item.Shift &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>PointNumber:&nbsp;</b> @item.P_Number</p>
                    <p class="text-dark"><b>Arival Time:&nbsp;</b> @item.P_S_Timing &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Return Time:&nbsp;</b> @item.P_E_Timing</p>
                    <p class="text-dark"><b>Route Description:&nbsp;</b> @item.Location.Routes</p>
                    
                </div>
               
            </div>
            <hr />
        }
    </div>
</div>
<div> 
    @Html.PagedListPager(Model, page => Url.Action("Index", "Home", new { page,search=Request.QueryString["search"]}), new PagedListRenderOptions { DisplayPageCountAndCurrentLocation=true }  )
</div>